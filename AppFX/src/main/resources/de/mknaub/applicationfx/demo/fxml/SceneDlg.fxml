<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="400.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/8.0.40" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.mknaub.applicationfx.demo.ctrl.SceneDlgCtrl">
   <center>
      <Button mnemonicParsing="false" onAction="#onShowDlg" text="show dlg" BorderPane.alignment="CENTER" />
   </center>
   <padding>
      <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
   </padding>
   <bottom>
      <HBox spacing="5.0" BorderPane.alignment="CENTER">
         <children>
            <VBox spacing="5.0" HBox.hgrow="ALWAYS">
               <children>
                  <Label text="glass pane show duration" />
                  <Slider fx:id="gpShowDurSlider" blockIncrement="1.0" majorTickUnit="500.0" max="2000.0" minorTickCount="1" showTickLabels="true" showTickMarks="true" value="800.0" />
                  <Label text="glass pane hide duration" />
                  <Slider fx:id="gpHideDurSlider" blockIncrement="1.0" majorTickUnit="500.0" max="2000.0" minorTickCount="1" showTickLabels="true" showTickMarks="true" value="500.0" />
                  <Label text="glass pane target opacity" />
                  <Slider fx:id="gpTargetOpacitySlider" majorTickUnit="0.25" max="1.0" showTickLabels="true" showTickMarks="true" value="0.7" />
               </children>
            </VBox>
            <VBox spacing="5.0" HBox.hgrow="ALWAYS">
               <children>
                  <Label text="dlg show duration" />
                  <Slider fx:id="dlgShowDurSlider" blockIncrement="1.0" majorTickUnit="500.0" max="2000.0" minorTickCount="1" showTickLabels="true" showTickMarks="true" value="800.0" />
                  <Label text="dlg hide duration" />
                  <Slider fx:id="dlgHideDurSlider" blockIncrement="1.0" majorTickUnit="500.0" max="2000.0" minorTickCount="1" showTickLabels="true" showTickMarks="true" value="500.0" />
               </children>
            </VBox>
         </children>
      </HBox>
   </bottom>
</BorderPane>
